{
    "version": 2,
    "builds": [
      {
        "src": "backend/src/server.js",
        "use": "@vercel/node"
      },
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "build" }
      }
    ],
    "routes": [
      {
        "src": "/api/dishes",
        "dest": "backend/src/server.js"
      },
      {
        "src": "/api/orders",
        "dest": "backend/src/server.js"
      },
      {
        "src": "/(.*)",
        "dest": "frontend/build/$1"
      }
    ],
    "env": {
      "NODE_ENV": "production"
    }
  }